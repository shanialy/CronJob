{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Launch Node.js App",
        "program": "${workspaceFolder}/app.js", // Path to your entry file
        "runtimeExecutable": "node", // Use nodemon for automatic restarts
        "runtimeArgs": ["--inspect=5858"],
        "restart": true,
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "skipFiles": ["<node_internals>/**"]
      }
    ]
  }
  